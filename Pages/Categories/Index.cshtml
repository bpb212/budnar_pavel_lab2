@page "{id:int?}"
@model budnar_pavel_lab2.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CategoryData.Categories) {
            string selectedRow = "";
            if (item.ID == Model.CategoryID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
}
    </tbody>
</table>
@if (Model.CategoryData.BookCategories != null)
{
    <h3>Books by selected category</h3>
    <table class="table">
        @{
            var index = 1;
        }
        @foreach (var item in Model.CategoryData.BookCategories)
        {
            string selectedRow = "";
            if (item.ID == Model.CategoryID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    @index
                </td>
                <td>
                    @item.Category.CategoryName
                </td>
                <td>
                    @item.Book.Title
                </td>
                <td>
                    @item.Book.Author.FullName
                </td>
            </tr>
            index++;
        }
    </table>
}